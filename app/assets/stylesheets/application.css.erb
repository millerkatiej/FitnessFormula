@import url(http://fonts.googleapis.com/css?family=Josefin+Slab:400,700);

body {
  background-image: url(<%= asset_path 'ff_background.gif' %>) 
}

body {
  font-family: 'Josefin Slab', serif;
  font-weight: bold;
}

h1 {
  font-weight: normal;
}

#search_box {
  float: right;
}


#corner_signout {
  float: right;
}

#corner_signin {
  float: right;
}

#home_p {
  text-align: center;
}

a, a:visited {
  color: #ff0066;
}


table.exercise_index_table {
  border-collapse: collapse;
  width: 100%;
}

.exercise_index_table td, .exercise_index_table th {
  padding: 4px 10px;
  border: solid 1px #AAA;
}

.exercise_index_table .price {
  text-align: right;
}

.exercise_index_table th .current {
  padding-right: 12px;
  background-repeat: no-repeat;
  background-position: right center;
}

.exercise_index_table th .asc {
  background-image: url(<%= asset_path 'up_arrow.gif' %>);
}

.exercise_index_table th .desc {
  background-image: url(<%= asset_path 'down_arrow.gif' %>);
}